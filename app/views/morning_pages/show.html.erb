<p><%= notice %></p>

<%= render @morning_page %>

<div class="m-4 space-y-4 border-t-2 border-gray-300 pt-4">
  <div class="space-x-4">
    <%= link_to "Edit", edit_morning_page_path(@morning_page), class: "inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors duration-300" %>
    <%= link_to "Archive", archive_morning_pages_path, class: "inline-block px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition-colors duration-300" %>
  </div>
  <%= button_to "Destroy this morning page", @morning_page, method: :delete, 
  class: "inline-block px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition-colors duration-300" %>
</div>

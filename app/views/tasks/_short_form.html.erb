<%= form_with model: @task, class: "mb-4 w-full" do |form| %>
<%= form.label :title, class: "sr-only" %>
<%= form.text_field :title, class: "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500", placeholder: "Add a new task" %>
<% end %>